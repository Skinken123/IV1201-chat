# The host the server is listening on
SERVER_HOST=localhost

# The database connection string
# Format: postgres://user:password@host:port/database
# For Docker (host): postgres://postgres:postgrespass@localhost:5432/chat_db
# For Docker (internal): postgres://postgres:postgrespass@postgres:5432/chat_db
DATABASE_URL=postgres://postgres:postgrespass@localhost:5432/chat_db

# The port number the server is listening on
SERVER_PORT=8001

# The secret used to sign JWTs
JWT_SECRET=change_this_in_production

# Docker environment settings
# Set to 'true' when using Docker for PostgreSQL
DOCKER_DB=false

# Optional: pgAdmin settings (only used with --profile tools)
PGADMIN_EMAIL=admin@chat.local
PGADMIN_PASSWORD=admin