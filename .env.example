# The host the server is listening on
SERVER_HOST=localhost

# The database login
DB_USER=chatuser

# The database password
DB_PASS=chatpass

# The database name
DB_NAME=chat_db

# The database host (use 'postgres' for Docker, 'localhost' for local)
DB_HOST=postgres

# The database server that is used. Must be one of 'mysql', 'mariadb', 
# 'postgres' or 'mssql', since no other are supported by Sequelize.
DB_DIALECT=postgres

# The port number the server is listening on
SERVER_PORT=8001

# The secret used to sign JWTs
JWT_SECRET=change_this_in_production

# Docker environment settings
# Set to 'true' when using Docker for PostgreSQL
DOCKER_DB=true

# Optional: pgAdmin settings (only used with --profile tools)
PGADMIN_EMAIL=admin@chat.local
PGADMIN_PASSWORD=admin